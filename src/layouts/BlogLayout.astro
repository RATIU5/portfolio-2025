---
import type { MarkdownLayoutProps } from "astro";
import Prose from "../components/Prose.astro";
import Layout from "./Layout.astro";
import Section from "../components/common/Section.astro";

type Props = MarkdownLayoutProps<{
  title: string;
  category: string;
  date: string;
  time: number;
  description: string;
}>;

const { frontmatter } = Astro.props;
---

<Layout>
  <Section>
    <div class="flex flex-col gap-4 mt-8 mb-16">
      <span class="text-xs uppercase">{frontmatter.category}</span>
      <h1 class="text-3xl sm:text-4xl leading-tight font-display">
        {frontmatter.title}
      </h1>
      <div class="flex justify-between text-xs">
        <span>{frontmatter.date}</span>
        <span>{frontmatter.time} min</span>
      </div>
    </div>
    <Prose>
      <slot />
    </Prose>
    <p class="pt-8">~RATIU5</p>
  </Section>
</Layout>
