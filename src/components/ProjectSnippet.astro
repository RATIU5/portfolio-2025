---
import Anchor from "./common/Anchor.astro";

export type Props = {
  title: string;
  description: string;
  url: string;
  githubUrl?: string;
  liveUrl?: string;
  tags: string[];
};

const { title, description, url, githubUrl, liveUrl, tags } = Astro.props;
---

<div class="flex flex-col gap-2 pb-8">
  <div class="flex flex-col gap-2 sm:flex-row sm:justify-between">
    <Anchor url={url} class="text-xl">
      {title}
    </Anchor>
    <div class="flex gap-2">
      {
        githubUrl ? (
          <Anchor url={githubUrl} class="text-base" external>
            GitHub
          </Anchor>
        ) : null
      }
      {
        liveUrl ? (
          <Anchor url={liveUrl} class="text-base" external>
            Live
          </Anchor>
        ) : null
      }
    </div>
  </div>
  <p class="text-neutral-900 dark:text-neutral-100">
    {description}
  </p>
  <div class="flex flex-row wrap gap-2">
    {
      tags.map((tag) => (
        <span class="px-2 py-1 bg-neutral-900 text-sm text-neutral-100 font-semibold dark:bg-neutral-100 dark:text-neutral-900">
          {tag}
        </span>
      ))
    }
  </div>
</div>
